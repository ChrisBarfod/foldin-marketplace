<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="container">
  <div class="form-group p-3">
  <div class="field form-group">
    <%= form.label :product_image %>
    <%= form.file_field :product_image, class: "form-control-file" %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :product_name, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :product_description, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, id: :product_price, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :postage %>
    <%= form.number_field :postage, id: :product_postage, class: "form-control" %>
  </div>

  <div class="field">                 
    <p>Category</p>
      <% Category.all.each do |category| %>
      <%= form.label(:category_id, category.name )  %>
      <%= form.radio_button(:category_id , category.id ) %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit "Add Product", class: "btn" %>
  </div>
<% end %>
 </div>
</div>