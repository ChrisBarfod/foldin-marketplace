<div class="container">
<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class=table>
  <thead>
    <tr>
      <th>Image</th>    
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Postage</th>
      <th>Catagories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag(product.product_image.small_thumb.url, alt: 'Image') if product.product_image? %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.postage %></td>
        <td><%= product.catagories %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
</div>