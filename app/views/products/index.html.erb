<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <p id="notice"><%= notice %></p>
    <div class="col">
      <div class="row">
        <div class="col-sm-1"></div>
        <div class="filter col-2">
        <h2>Filter</h2>
          <%= form_tag(products_path, method: "get") do %>
            <% Category.all.each do |category| %>
            <div>
              <% unless params[:category_ids].nil? %>
                <% checked = params[:category_ids].include? category.id.to_s %>
                <% end %>   
                <%= check_box_tag('category_ids[]', category.id, checked) %>
                <%= category.name %>
              </div>
            <% end %>
            <%= submit_tag("Search") %>
          <% end %>
        </div>

        <div class="col-8">
          <div class="row">
            <% @products.each do |product| %>
              <div class="col-md-6 col-xl-4 mb-5">
                <div class="card" style="width: 18rem;">    
                  <div class="card-img-top text-center mt-3"><a href="/products/ <%= product.id %>"><%= image_tag(product.product_image.small_thumb.url, alt: 'Image') if product.product_image? %></a></div>
 

                  <div class="card-body">
                    <ul class="list-group list-group-flush">
                      <h4><li class="list-group-item p-0"><%= product.name %></li></h4>
                      <h5><li class="list-group-item p-0"><%= product.price*100  %></li></h5>
                      <div class="card-text">
                        <li class="list-group-item p-0"><%= product.category.name %></li>
                      </div>

                      
                    </ul>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
  </div>
</div>